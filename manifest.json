{
  "name": "TodoMVC",
  "manifest_version": 2,
  "description": "Turning TodoMVC into a Chrome extension.",
  "version": "1.1",

  "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
  },

  "chrome_url_overrides": {
      "newtab": "newtab.html"
  },

 "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon.png"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "storage",
    "contextMenus"
  ]
}
