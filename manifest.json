{
  "name": "TodoMVC",
  "manifest_version": 2,
  "description": "Turning TodoMVC into a Chrome extension.",
  "version": "1.0",

  "chrome_url_overrides": {
      "newtab": "newtab.html"
  },

 "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "storage",
    "contextMenus"
  ]
}
